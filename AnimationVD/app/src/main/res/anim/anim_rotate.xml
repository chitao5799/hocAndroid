<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate android:fromDegrees="30"
        android:toDegrees="-30"
        android:pivotX="50%"
        android:pivotY="0%"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:duration="1000" />
<!--pivotX và  pivotY  để chỉ định tâm xoay -->
<!--android:repeatMode: reverse thực hiện từ from đến to rồi từ to đến from
                        restart thực hiện thừ from đến to rồi lại từ from đến to - mặc định -->
</set>